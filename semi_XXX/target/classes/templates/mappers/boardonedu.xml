<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
          PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
          "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
          
 <mapper namespace="com.onedumall.mapper.BoardMapper">
 
 	<!--  모든 공지사항 정보 가졍기 -->
 	<select id="getAllBoard" resultType="com.onedumall.dto.Board">
 		SELECT * FROM POST
 	</select>
 	
 	<!-- 포스트 넘버 값으로 가져오기 -->
 	<select id ="getBoardById" resultType="com.onedumall.dto.Board" parameterType="int">
 		SELECT * FROM POST
 		WHERE POST_NO = #{POST_NO}
 	</select>
 	
 	
 
 
 
 
 
 
 </mapper>