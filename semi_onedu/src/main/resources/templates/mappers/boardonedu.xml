<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
          PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
          "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
          
 <mapper namespace="com.onedumall.mapper.BoardMapper">
 	<select id="getAllBoard" resultType="com.onedumall.dto.Board">
 		SELECT * FROM question
 	</select>
 	
 	<select id ="getBoardById" resultType="com.onedumall.dto.Board" parameterType="int">
 		SELECT * FROM question
 		WHERE question_no = #{question_no}
 	</select>
 	
 	
 
 
 
 
 
 
 </mapper>