<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
        
<mapper namespace="com.onedumall.mapper.MyinfoMapper">

	<select id="getLogin" resultType="com.onedumall.dto.Members" parameterType="java.util.Map">
		SELECT *
		FROM members
		WHERE members_id = #{members_id}
		AND members_pw = #{members_pw}
	
	</select>

	<select id="getAllmember" resultType="com.onedumall.dto.Members">
	
		SELECT members_name, members_email, members_address, members_phone, members_birth
	 	FROM members
	
	</select>
	
	<delete id="deleteMember" parameterType="String">
		DELETE FROM members
		where members_id = #{members_id}
	</delete>
	
</mapper>
